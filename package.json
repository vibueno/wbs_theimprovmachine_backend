{
  "name": "wbs_theimprovmachine_backend",
  "version": "1.0.0",
  "description": "The Improv Machine (backend)",
  "engines": {
    "node": ">=14.15.4"
  },
  "type": "module",
  "scripts": {
    "test": "jest --coverage",
    "startsdev": "tsnd ./src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vibueno/wbs_theimprovmachine_backend.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vibueno/wbs_theimprovmachine_backend/issues"
  },
  "homepage": "https://github.com/vibueno/wbs_theimprovmachine_backend#readme",
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "eslintConfig": {
    "env": {
      "jest": true,
      "node": true,
      "commonjs": true,
      "es2021": true
    },
    "extends": [
      "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "semi": [
        2,
        "always"
      ]
    }
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "collectCoverageFrom": [
      "./src/**/*"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      ".src/index.ts",
      ".src/routes"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/pg": "^7.14.10",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "cors": "^2.8.5",
    "eslint": "^7.21.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "jest": "^26.6.3",
    "remove": "^0.1.5",
    "ts-jest": "^26.5.2",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.2"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "pg": "^8.5.1"
  }
}
